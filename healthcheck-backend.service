[Unit]
Description=Health Check Backend Service
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/healthcheck-backend
ExecStart=/usr/bin/java -jar target/healthcheck-backend-0.0.1-SNAPSHOT.jar
Restart=always
RestartSec=10
Environment="JAVA_OPTS=-Xmx512m -Xms256m"

[Install]
WantedBy=multi-user.target 